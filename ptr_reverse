#include<stdio.h>

int main()
{
	//KELIMELERIN TERSINI BASTIRIR
	
	char dizi[5][50];
	char *ilk, *son;
	char gecici;
	int i;
	
	printf("5 kelime girin:\n");
	
	for(i=0; i<5; i++)
	{
		scanf("%s", dizi[i]);
	}
	
	printf("\nkelimelerin tersi\n");
	
	for(i=0; i<5; i++)
	{
		ilk=son=dizi+i;
		while(*son)
		{
			*son++;
		}
		*son--;
		
		while(ilk<son)
		{
			gecici=*son;
			*son=*ilk;
			*ilk=gecici;
			son--;
			ilk++;
		}
	}
	
	
	for(i=0; i<5; i++)
	{
		printf("%s\n", *(dizi+i));
	}
}
